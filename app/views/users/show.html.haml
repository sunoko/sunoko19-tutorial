- provide(:title, @user.name)
- provide(:search_name, 'Content Search')
- provide(:title, user_path)
.row
  %aside.col-md-4
    %section
      %h1
        = gravatar_for @user
        = @user.name
    %section.stats
      = render 'shared/stats'
  .col-md-8
    = render 'follow_form' if logged_in?
    - if @user.microposts.any?
      %h3
        Microposts (#{@user.microposts.count})

      = render 'users/search'

      %ol.microposts
        = render @microposts
      = will_paginate @microposts
